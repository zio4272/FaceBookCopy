<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <layer-list>

            <item>
                <shape>
                    <corners
                        android:radius="10dp"/>
                    <solid
                        android:color="#e8e8ea"/>
                </shape>
            </item>

            <item
                android:top="1dp"
                android:left="1dp"
                android:bottom="1dp"
                android:right="1dp">
                <shape>
                    <corners
                        android:radius="9dp"/>
                    <solid
                        android:color="#F5F5F5"/>
                </shape>
            </item>

        </layer-list>

    </item>

    <item
        android:state_pressed="true">

        <layer-list>

            <item>
                <shape>
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"/>
                    <solid
                        android:color="#c8c8ac"/>
                </shape>
            </item>

            <item
                android:top="1dp"
                android:left="1dp"
                android:bottom="1dp"
                android:right="1dp">
                <shape>
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"/>
                    <solid
                        android:color="#DFDFDF"/>
                </shape>
            </item>

        </layer-list>

    </item>


</selector>